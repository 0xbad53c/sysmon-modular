<Sysmon schemaversion="4.31">
   <EventFiltering>
 <RuleGroup name="" groupRelation="or">
      <ProcessCreate onmatch="include">
        <ParentImage name="technique_id=T1137,technique_name=Office Application Startup" condition="image">excel.exe</ParentImage>
    	  <ParentImage name="technique_id=T1137,technique_name=Office Application Startup" condition="image">winword.exe</ParentImage>
    	  <ParentImage name="technique_id=T1137,technique_name=Office Application Startup" condition="image">powerpnt.exe</ParentImage>
    	  <ParentImage name="technique_id=T1137,technique_name=Office Application Startup" condition="image">outlook.exe</ParentImage>
    	  <ParentImage name="technique_id=T1137,technique_name=Office Application Startup" condition="image">msaccess.exe</ParentImage>
    	  <ParentImage name="technique_id=T1137,technique_name=Office Application Startup" condition="image">mspub.exe</ParentImage>
		  <Rule name="Remote Copy via windword" groupRelation="and">
			<CommandLine name="technique_id=T1105,technique_name=Remote Copy" condition="contains">http</CommandLine>
			<OriginalFileName name="technique_id=T1105,technique_name=Remote Copy" condition="is">windword.exe</OriginalFileName>
		  </Rule>
		  <Rule name="Remote Copy via powerpnt" groupRelation="and">
			<CommandLine name="technique_id=T1105,technique_name=Remote File Copy" condition="contains">http</CommandLine>
			<OriginalFileName name="technique_id=T1105,technique_name=Remote File Copy" condition="is">powerpnt.exe</OriginalFileName>
		  </Rule>
		  <Rule name="Remote Copy via excel" groupRelation="and">
			<CommandLine name="technique_id=T1105,technique_name=Remote File Copy" condition="contains">http</CommandLine>
			<OriginalFileName name="technique_id=T1105,technique_name=Remote File Copy" condition="is">excel.exe</OriginalFileName>
		  </Rule>
      </ProcessCreate>
</RuleGroup>
</EventFiltering>
</Sysmon>
