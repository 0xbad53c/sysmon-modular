    "version": "0.2.0",
    "configurations": [
        {
            "name": "PowerShell Launch Current File",
            "type": "PowerShell",
            "request": "launch",
            "script": "${file} Merge-AllSysmonXml -Path ( Get-ChildItem '[0-9]*.xml') -AsString | Out-File sysmonconfig.xml",
            "cwd": "${file}"
        }
}